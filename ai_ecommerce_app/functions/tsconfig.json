{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "es2022",
    "target": "es2022",
    "outDir": "lib",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src"]
}